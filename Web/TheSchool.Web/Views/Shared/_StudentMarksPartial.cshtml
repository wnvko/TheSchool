@model TheSchool.Web.ViewModels.Students.StudentViewModel

<div class="row">
    <h1 class="text-center text-success">Update @Model.FirstName @Model.SecondName Marks Here</h1>
</div>
<div class="row">
    @using (Html.BeginForm("Update", "Student", new { area = "Teacher" }, FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            @for (int i = 0; i < Model.Marks.Count; i++)
            {
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.Label("model.Marks[" + i + "].Value", Model.Marks[i].Discipline, new { @class = "label label-info" })
                        @Html.DropDownList("model.Marks[" + i + "].Value", new SelectList(new[] { 1, 2, 3, 4, 5, 6 }), Model.Marks[i].Value.ToString(), new { @class = "form-control", value=Model.Marks[i].Value.ToString() })
                        @Html.ValidationMessageFor(m => m.Marks)
                        @Html.Hidden("model.Marks[" + i + "].Id", Model.Marks[i].Id)
                    </div>
                </div>
            }
        </div>
        <br />
        @Html.Hidden("model.Id", Model.Id, new { @class = "form-control" })
        <div class="row">
            <input type="submit" class="btn btn-success" value="Update Marks" />
            <a href="~/Teacher/TutorClass" class="btn btn-success">Cancel</a>
        </div>
    }
</div>


@model TheSchool.Web.ViewModels.Home.HomeIndexViewModel
@{
    ViewBag.Title = "Home Page";
}
<br />
<div class="row">
    <div class="col-md-8">
        <h3 class="lead">Latest News</h3>
        @foreach (var news in Model.News)
        {
            @Html.DisplayFor(n => news, "NewsShort")
        }
    </div>
    <div class="col-md-4">
        <div class="col-md-12">
            <h3 class="lead">Top 10 Students by Marks</h3>
        </div>
        <div class="col-md-9 text-center">
            Student Name
        </div>
        <div class="col-md-3 text-center">
            Marks
        </div>
        @foreach (var student in Model.Students)
        {
            @Html.DisplayFor(s => student, "TopTenStudents")
        }
    </div>
</div>
